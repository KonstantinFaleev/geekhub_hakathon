<p id="notice"><%= notice %></p>

<h1>Notices</h1>

<table class="table">
  <thead>
  <tr>
    <th scope="col">Title</th>
    <th scope="col">Link</th>
    <th scope="col">Writer</th>
    <th scope="col">Created on</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @notices.each do |notice| %>
      <tr>
        <td><%= notice.title %></td>
        <td><%= notice.link %></td>
        <td><%= notice.writer %></td>
        <td><%= notice.created_on %></td>
        <td><%= link_to 'Show', notice %></td>
        <td><%= link_to 'Edit', edit_notice_path(notice) %></td>
        <td><%= link_to 'Destroy', notice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
  <%= will_paginate @notices %>
</table>

<br>

<%= link_to 'New Notice', new_notice_path %>